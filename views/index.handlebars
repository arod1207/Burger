<h1>Welcome to Good Burger</h1>
<br>

<div class="container-fluid">
    <div class="row">
        <div class="col-4 d-flex justify-content-center">
            <div id="left">
                <h2>Eat This Burger:</h2>

                <ul>
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}

                        <form action="/{{this.id}}" method="POST">
                            <input type="hidden" name="devoured">
                            <button class="btn btn-danger" type="submit">Eat Me!</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-4 d-flex justify-content-center">
            <img src="assets/img/juicyburger.png">
        </div>


        <div class="col-4 d-flex justify-content-center">
            <div id="right">
                <h2>Burgers That Have Been Devoured: </h2>

                <ul>
                    {{#each burgers}} {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}

                         <form action="/remove/{{this.id}}" method="POST">
                            <input type="hidden" name="devoured">
                            <button class="btn btn-danger" type="submit">Remove Me!</button>
                        </form>
                    </li>
                    {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="center">
    <h2>Add a Burger</h2>

    <form class="create-update-form" method="POST">
        <div class="form-group">
            <textarea name="burger_name" rows="2" cols="50"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>